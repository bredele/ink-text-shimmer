{
  "name": "ink-text-shimmer",
  "description": "Shimmering effect for Ink text",
  "version": "1.0.0",
  "files": [
    "dist",
    "examples"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "peerDependencies": {
    "ink": ">=3.0.0",
    "react": ">=16.8.0"
  },
  "scripts": {
    "build": "cmplr --type-check",
    "test": "node --test dist/esm/**/*.test.js",
    "example:basic": "node examples/basic.js",
    "example:demo": "node examples/loading-demo.js"
  },
  "keywords": [
    "ink",
    "text",
    "shimmer",
    "loading"
  ],
  "author": "Olivier Wietrich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bredele/ink-text-shimmer/issues"
  },
  "homepage": "https://github.com/bredele/ink-text-shimmer#readme",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "cmplr": "^1.3.0",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.20.5"
  },
  "dependencies": {
    "ink": ">=3.0.0",
    "react": ">=16.8.0"
  }
}
